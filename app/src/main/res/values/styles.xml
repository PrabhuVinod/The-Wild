<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/green_blur</item>
        <item name="android:elevation">@dimen/shadow_elevation</item>


        <item name="android:fontFamily">@font/interui</item>
        <item name="fontFamily">@font/interui</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

        <item name="toolbarStyle">@style/myToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>

    </style>

    <style name="deatilsTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/green_blur</item>
        <item name="android:fontFamily">@font/buffaloscript</item>
        <item name="fontFamily">@font/buffaloscript</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->

        <!--<item name="android:windowEnterTransition">@android:transition/fade</item>-->
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>


    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingRight">10dp</item>
    </style>


</resources>
